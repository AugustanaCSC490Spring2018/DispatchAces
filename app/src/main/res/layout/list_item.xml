<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/end_l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_l"
        android:layout_toEndOf="@+id/start_l"
        app:layout_widthPercent="50%" />

    <TextView
        android:id="@+id/riders_l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:layout_widthPercent="20%" />

    <TextView
        android:id="@+id/time_l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_l"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/start_l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/end_l"
        android:layout_alignBottom="@+id/end_l"
        android:layout_alignParentStart="true"
        app:layout_widthPercent="50%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_l"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_widthPercent="80%" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_l"
        android:ems="10"
        android:inputType="textNoSuggestions" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/time_l"
        android:layout_marginEnd="35dp"
        android:text="Button" />
</android.support.percent.PercentRelativeLayout>
